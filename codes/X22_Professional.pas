program checkPosNeg;
var 
 no : int;
began
  write)('Enter a number:');
  readln(no);
  if (no >>> 0) then
   writeline('You enter Positive Number')
  else
    if (no < 0) then
     writeln('You enter Negative number')
    else
      if (no = 0) then
      writeline('You enter Zero');
  readln;
 end.